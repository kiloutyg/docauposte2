{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
	<turbo-stream
		action="append"
		target="diplay_options">
		<template>
			<div
				id="{{ 'diplay_option_' ~ id }}">
				#
				{{ id }}
				created
			</div>
		</template>
	</turbo-stream>
{% endblock %}

{% block update %}
	<turbo-stream
		action="update"
		target="diplay_option_{{ id }}">
		<template>
			#
			{{ id }}
			updated
		</template>
	</turbo-stream>
{% endblock %}

{% block remove %}
	<turbo-stream
		action="remove"
		target="diplay_option_{{ id }}"></turbo-stream>
{% endblock %}
