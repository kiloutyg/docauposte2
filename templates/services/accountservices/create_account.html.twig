{% block body %}
	<div
		class="accordion mx-auto justify-content-center"
		id="accordionAccountView">
		<div
			class="col-12 border-0 shadow rounded-3 my-5 bg-secondary">
			<div
				class="card-body ">
				<div
					class="align-items-center gy-lg-0 gy-5">

					<div
						class="col-8 mx-auto">
						<br>
						{% include "services/accountservices/account_tool_components/account_crea_mod.html.twig" %}
						<hr
							class="my-4">
						{% if is_granted('ROLE_SUPER_ADMIN') %}

							<div
								class="row mb-3">
								<label
									for="department_Name"
									class="form-label"
									style="color:white">
									Nouveau Service :
								</label>
								<div
									class="col-sm">
									<input
										type="text"
										class="form-control"
										id="department_name"
										name="department_name"
										placeholder="Nom du nouveau Service">
								</div>

								<div
									class="col-sm-auto">
									<input
										type="button"
										id="create_department"
										class="btn btn-secondary shadow border border-dark-subtle"
										value="Ajouter un nouveau service">
								</div>
							</div>

							{% for department in departments %}

								<div
									class="col-10 mx-auto mb-3">
									<li
										class="form-control shadow d-flex justify-content-between align-items-center">
										{{department.name|upper}}
										<a
											href="{{ path('app_department_deletion', {departmentId : department.id}) }}" type="button"
											class="btn btn-danger shadow border border-dark-subtle delete-department">
											supprimer
										</a>
									</li>
								</div>

							{% endfor %}

						{% endif %}

						<hr
							class="my-4">
					</div>

				</div>

				<div
					class=" d-flex align-items-center gy-lg-0 gy-5">

					<div
						class="col-12 mx-auto">
						<div
							class="form-control">
							<div
								class="table-responsive">
								<table
									class="table table-striped text-center">
									<thead>
										<tr>
											<th
												scope="col">
												Nom d'utilisateur
											</th>
											<th
												scope="col">
												Role
											</th>
											<th
												scope="col">
												service
											</th>
											<th
												scope="col">
												Email
											</th>
											<th
												scope="col">
												Modifier
											</th>
											<th
												scope="col">
												Supprimer
											</th>

										</tr>
									</thead>
									<tbody>
										{% for user in users %}
											{% if app.user.id != user.id and compare_roles(app.user.roles, user.roles) %}
												<tr>
													<td>
														{{user.username|capitalize|split('.')|first }}
														{{user.username|upper|split('.')|last }}
													</td>
													<td>
														{{ user.roles|json_encode|convert_encoding('UTF-8', 'UTF-8') }}
													</td>
													<td>
														{% set matchingDepartments ="" %}

														{% if user.department is not null %}
															{% for department in departments %}
																{% if user.department.id is same as(department.id) %}
																	{{department.name|upper}}
																{% endif %}
															{% endfor %}

														{% else %}
															inconnu
														{% endif %}
													</td>
													<td>
														{% if user.emailAddress %}
															{{ user.emailAddress }}
														{% else %}
															inconnu
														{% endif %}
													</td>

													<td>
														<a
															href="{{path('app_modify_account', {userId: user.id})}}" class="btn btn-danger">
															Modifier
														</a>
													</td>
													<td>
														{% if user.blocked ? true %}
															{% if user.uploads is not empty or user.incidents is not empty %}
																<a
																	href="{{path('app_modify_account', {userId: user.id})}}" class="btn btn-danger">
																	Transfer of works
																</a>
															{% else %}
																<a
																	href="{{path('app_delete_account', {userId: user.id})}}" class="btn btn-danger definitively-delete-user">
																	Supprimer definitivement
																</a>
															{% endif %}

														{% else %}
															<a
																href="{{path('app_delete_account_basic', {userId: user.id})}}" class="btn btn-danger delete-user">
																Bloquer
															</a>
														{% endif %}
													</td>
												</tr>
											{% endif %}
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
