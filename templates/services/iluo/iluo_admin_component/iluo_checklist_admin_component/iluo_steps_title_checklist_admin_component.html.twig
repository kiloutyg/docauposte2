<turbo-frame
	id="steps-title-checklist-section"
	class="container row mx-auto px-0 px-md-2">
	{{ form_start(stepsTitleForm, { attr: {class: 'col-lg-6 col-md-12 col-sm-12 d-flex flex-column', 
	method: 'POST', action: path('app_iluo_steps_title_checklist_admin')}}
	) }}
	<div
		class="col-12">
		{{ form_label(stepsTitleForm.title) }}
		{{ form_widget(stepsTitleForm.title) }}
	</div>
	<div
		class="col-12">
		{{ form_label(stepsTitleForm.iluoLevel) }}
		{{ form_widget(stepsTitleForm.iluoLevel) }}
	</div>
	<div
		class="col-12">
		{{ form_widget(stepsTitleForm.save) }}
	</div>
	<div
		id="flash-messages">
		{% for label, messages in app.flashes %}
			<div
				class="alert alert-{{ label }}">
				{% for message in messages %}
					<p>
						{{ message }}
					</p>
				{% endfor %}
			</div>
		{% endfor %}
	</div>
	{{ form_end(stepsTitleForm) }}
	{% if stepsTitle is not empty %}
		<div
			class="col-lg-6 col-md-12 col-sm-12 mt-auto mb-auto accordion"
			id="accordionStepsTitleList">
			<div
				class="accordion-item shadow-lg shadow-lg-inset border border-dark">
				<h2
					class="accordion-header"
					id="headingStepsTitleList">
					<button
						class="accordion-button bg-white text-dark collapsed"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#collapseStepsTitleList"
						aria-expanded="false"
						aria-controls="collapseStepsTitleList">
						<strong>
							Liste des Produits
						</strong>
					</button>
				</h2>
				<div
					id="collapseStepsTitleList"
					class="accordion-collapse collapse "
					aria-labelledby="headingStepsTitleList"
					data-bs-parent="#accordionStepsTitleList">
					<div
						class="accordion-body bg-white text-dark">
						<ul
							class="list-group">
							{% for stepTitle in stepsTitle %}
								<li
									class="list-group-item bg-white text-dark d-flex justify-content-between align-items-center">
									<strong>
										{{ stepTitle.name }}
									</strong>
									{{ delete_form('stepsTitle', stepTitle.id, 'app_iluo_steps_title_checklist_admin') }}
								</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
</turbo-frame>
