<turbo-frame
	id="shiftleadersManagement"
	class="container row">

	{{ form_start(shiftLeadersForm, { attr: {class: 'col-6 d-flex flex-column ', method: 'POST', action: path('app_iluo_shiftleaders_general_elements_admin')}}
	) }}
	<div
		class="col-12">
		{{ form_label(shiftLeadersForm.user) }}
		{{ form_widget(shiftLeadersForm.user) }}
		{{ form_widget(shiftLeadersForm.save) }}
	</div>

	<div
		id="flash-messages">
		{% for label, messages in app.flashes %}
			<div
				class="alert alert-{{ label }}">
				{% for message in messages %}
					<p>
						{{ message }}
					</p>
				{% endfor %}
			</div>
		{% endfor %}
	</div>
	{{ form_end(shiftLeadersForm) }}


	{% if shiftLeaders is not empty %}
		<div
			class="col-6 mt-auto mb-auto accordion"
			id="accordionShiftLeaderList">
			<div
				class="accordion-item shadow-lg shadow-lg-inset border border-dark">
				<h2
					class="accordion-header"
					id="headingShiftLeaderList">
					<button
						class="accordion-button bg-white text-dark collapsed"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#collapseShiftLeaderList"
						aria-expanded="false"
						aria-controls="collapseShiftLeaderList">
						<strong>
							Liste des Managers d'Ã©quipe
						</strong>
					</button>
				</h2>
				<div
					id="collapseShiftLeaderList"
					class="accordion-collapse collapse "
					aria-labelledby="headingShiftLeaderList"
					data-bs-parent="#accordionShiftLeaderList">
					<div
						class="accordion-body bg-white text-dark">
						<ul
							class="list-group">
							{% for shiftLeader in shiftLeaders %}
								<li
									class="list-group-item bg-white text-dark d-flex justify-content-between align-items-center">
									<strong>
										{{ shiftLeader.user.username }}
									</strong>
									{% if is_granted('ROLE_SUPER_ADMIN') %}
										<a
											href="{{path('app_iluo_delete_entity', {'entityType': 'shiftLeaders', 'entityId': shiftLeader.id})}}" class="btn btn-danger delete-shiftLeadersshadow">
											Supprimer
										</a>
									{% endif %}
								</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
</turbo-frame>
