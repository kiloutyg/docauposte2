<div
	class="flex-grow-1">
	<strong
		class="flex-grow-1">
		{{shiftLeader.operator.user.username|capitalize|split('.')|first }}
		{{shiftLeader.operator.user.username|upper|split('.')|last }}
	</strong>
</div>

<div>
	{{shiftLeader.operator.team.name }}
	{% set uap = shiftLeader.operator.uaps|first %}
	{{uap.name}}
</div>

{% if uap is empty and shiftLeader.operator.user.department is defined and shiftLeader.operator.user.department is not empty %}
	<div>
		{{shiftLeader.operator.user.department.name|capitalize}}
	</div>
{% endif %}

{% if is_granted('ROLE_SUPER_ADMIN') %}
	<a
		id="modify_user_account"
		href="{{path('app_account_modify_account', {userId: shiftLeader.operator.user.id})}}" aria-label="Modify the User Entity"
		data-turbo-frame="_top"
		class="btn btn-info m-1 tooltips-above">
		<span
			class="d-none d-md-inline">
			UserMod
		</span>
		<i
			class="fas fa-pen-to-square d-inline d-md-none"
			aria-hidden="true"
			title="	Modifier"></i>
		<span
			class="visually-hidden">
			UserMod
		</span>
	</a>
{% endif %}

{{ delete_form('shiftLeaders', shiftLeader.id, 'app_iluo_shiftleaders_general_elements_admin') }}
