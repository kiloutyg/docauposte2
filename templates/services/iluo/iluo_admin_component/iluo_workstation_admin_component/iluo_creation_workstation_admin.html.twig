<turbo-frame
	id="workstationManagement"
	class="container row mx-auto px-0 px-md-2">
	{{ form_start(workstationForm, { attr: {class: 'col-lg-6 col-md-12 col-sm-12 d-flex flex-column ', method: 'POST', action: path('app_iluo_workstation_admin')}}
	) }}
	<div
		class="col-12">
		{{ form_label(workstationForm.) }}
		{{ form_widget(workstationForm.) }}
		{{ form_widget(workstationForm.save) }}
	</div>
	<div
		class="workstationName-message"
		data-name-validation-target="workstationNameMessage"></div>
	<div
		id="flash-messages">
		{% for label, messages in app.flashes %}
			<div
				class="alert alert-{{ label }}">
				{% for message in messages %}
					<p>
						{{ message }}
					</p>
				{% endfor %}
			</div>
		{% endfor %}
	</div>
	{{ form_end(workstationForm) }}
	{% if workstation is not empty %}
		<div
			class="col-lg-6 col-md-12 col-sm-12 mt-auto mb-auto accordion"
			id="accordionWorkstationList">
			<div
				class="accordion-item shadow-lg shadow-lg-inset border border-dark">
				<h2
					class="accordion-header"
					id="headingWorkstationList">
					<button
						class="accordion-button bg-white text-dark collapsed"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#collapseWorkstationList"
						aria-expanded="false"
						aria-controls="collapseWorkstationList">
						<strong>
							Liste des workstations
						</strong>
					</button>
				</h2>
				<div
					id="collapseWorkstationList"
					class="accordion-collapse collapse "
					aria-labelledby="headingWorkstationList"
					data-bs-parent="#accordionWorkstationList">
					<div
						class="accordion-body bg-white text-dark">
						<ul
							class="list-group">
							{% for workstation in workstation %}
								<li
									class="list-group-item bg-white text-dark d-flex justify-content-between align-items-center">
									<div
										class="flex-grow-1">
										<strong
											class="flex-grow-1">
											{{workstation.name|capitalize|split('.')|first }}
											{{workstation.name|upper|split('.')|last }}
										</strong>
									</div>
									{% if is_granted('ROLE_SUPER_ADMIN') %}
										<a
											id="modify__account"
											href="{{path('app_account_modify_account', {Id: workstation..id})}}" aria-label="Modify the  Entity"
											data-turbo-frame="_top"
											class="btn btn-info m-1 tooltips-above">
											<span
												class="d-none d-md-inline">
												Mod
											</span>
											<i
												class="fas fa-pen-to-square d-inline d-md-none"
												aria-hidden="true"
												title="	Modifier"></i>
											<span
												class="visually-hidden">
												Mod
											</span>
										</a>
										<a
											href="{{path('app_iluo_delete_entity', {'entityType': 'workstation', 'entityId': workstation.id})}}" aria-label="Delete the workstation Entity, not the "
											class="btn btn-danger delete-workstation shadow tooltips-above">
											<span
												class="d-none d-md-inline">
												Supprimer
											</span>
											<i
												class="fas fa-trash d-inline d-md-none"
												aria-hidden="true"
												title="Supprimer"></i>
											<span
												class="visually-hidden">
												Supprimer
											</span>
										</a>
									{% endif %}
								</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
</turbo-frame>
