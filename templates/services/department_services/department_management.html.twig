<div
	class="row mb-3 justify-content-evenly">
	<label
		for="department_name"
		class="form-label"
		style="color:white">
		Nouveau Service :
	</label>
	<div
		class="col-auto">
		<input
			type="text"
			class="form-control"
			id="department_name"
			name="department_name"
			placeholder="Nom du nouveau Service">
	</div>
	<div
		class="col-auto">
		<input
			type="button"
			id="create_department"
			class="btn btn-secondary shadow border border-dark-subtle"
			value="Ajouter un nouveau service">
	</div>
</div>
{% for department in departments %}
	<div
		class="col-lg-10 col-md-11 col-sm-12 mx-auto mb-3">
		<div
			class="form-control shadow d-flex justify-content-between align-items-center">
			{{department.name|upper}}
			<a
				href="{{ path('app_department_deletion', {departmentId : department.id}) }}" type="button"
				class="btn btn-danger shadow border border-dark-subtle delete-department">
				<span
					class="d-none d-md-inline">
					Supprimer
				</span>
				<i
					class="fas fa-trash d-inline d-md-none"
					aria-hidden="true"
					title="Supprimer"></i>
				<span
					class="visually-hidden">
					Supprimer
				</span>
			</a>
		</div>
	</div>
{% endfor %}
