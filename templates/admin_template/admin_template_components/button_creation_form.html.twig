{% if is_granted('ROLE_LINE_ADMIN') %}
	<div
		class="accordion-item">
		<h2
			class="accordion-header"
			id="headingCategory">
			<button
				class="accordion-button fs-3 collapsed"
				type="button"
				data-bs-toggle="collapse"
				data-bs-target="#collapseCategory"
				aria-expanded="true"
				aria-controls="collapseCategory">
				<strong>
					Formulaire de création de boutons :
				</strong>
			</button>
		</h2>
		<div
			id="collapseCategory"
			class="accordion-collapse collapse"
			aria-labelledby="headingCategory"
			data-bs-parent="#accordionCategory">
			<div
				class="accordion-body accordion-bg shadow shadow-inset">
				<div
					class="card border-0 shadow rounded-3 my-5">
					<div
						class="card-body">
						<div
							class="card border-0 shadow rounded-3 my-5 bg-secondary">
							<div
								class="card-body">
								<div
									class="row align-items-center gy-lg-0 gy-5 ">
									<div
										class="col-lg-6 col-md-6 col-sm-12 ">
										<h3
											class="card-title text-center m-2 fw-light fs-4">
											<strong>
												Création de Boutons
											</strong>
										</h3>
										<form
											class="d-flex flex-column"
											method="POST"
											action="{{ path('app_category_admin_create_button', {categoryId: category.id}) }}" data-controller="name-validation">
											<div
												class="form-control mb-3">
												<label
													for="buttonname">
													Nom du Bouton
												</label>
												<input
													type="text"
													name="buttonname"
													placeholder="Nom du Bouton"
													required
													class="form-control"
													id="buttonname"
													data-name-validation-target='organizationEntityName'
													data-action='input->name-validation#validateOrganizationEntityName'>
												<div
													data-name-validation-target="organizationEntityNameMessage"
													class="organizationEntityName-message"></div>
											</div>
											<div
												class="d-grid">
												<button
													class="btn btn-primary btn-login text-first|uppercase fw-bold"
													type="submit"
													data-name-validation-target='submitButton'
													disabled='true'>
													Valider
												</button>
											</div>
										</form>
									</div>
									<div
										class="col-md-6">
										<h5
											class="card-title text-center mb-5 fw-light fs-5">
											<strong>
												Liste des boutons de la Catégorie
												{{ category.name|split('.')|first|upper }}
												:
											</strong>
										</h5>
										<ul
											class="list-unstyled">
											{% for button in categoryButtons %}
												<li
													class="form-control d-flex justify-content-between align-items-center mb-2">
													<div
														class="flex-grow-1">
														<a
															href="{{path('app_button', {buttonId: button.id })}}" class="btn btn-dark">
															{{ button.name|split('.')|first|upper }}
														</a>
													</div>
													{% if is_granted ('ROLE_LINE_ADMIN') %}
														<a
															href="{{path('app_base_views_modification')}}" class="btn btn-info m-2">
															Modifier
														</a>
														<a
															href="{{path('app_category_admin_delete_button', {buttonId: button.id})}}" class="btn btn-danger delete-button">
															Supprimer
														</a>
													{% endif %}
												</li>
											{% else %}
												<li
													class="alert alert-danger d-flex justify-content-center">
													<button
														class="btn btn-lg btn-outline-dark"
														onclick="event.preventDefault(); window.history.back();">
														Il n'y a pas de boutons dans cette catégorie.
													</button>
													<a
														href="javascript:void(0)"
														onclick="event.preventDefault(); window.history.back();"></a>
												</li>
											{% endfor %}
										</ul>
									</div>
								</div>
								<hr
									class="my-4">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}
